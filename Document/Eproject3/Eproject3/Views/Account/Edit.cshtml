@model Eproject3.Models.Admin
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
	<div class="container">
		<div class="row justify-content-center mt-5">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header text-black text-center">
						<h3>Update Account</h3>
					</div>
					<div class="card-body">
						<form asp-action="Edit" method="post" asp-controller="Account">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Id" class="control-label"></label>
                                <input asp-for="Id" class="form-control" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AdminName" class="control-label">Admin Name</label>
                                <input asp-for="AdminName" class="form-control" />
                                <span asp-validation-for="AdminName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Role" class="control-label"></label>
                                <select asp-for="Role" class="form-control" required>
								<option value="admin">Admin</option>
								<option value="constructor">Constructor</option>
								<option value="maintainer">Maintainer</option>
							</select>
                            </div>
							<div class="form-group">
							<div class="form-group">
								<label asp-for="IsActive" class="control-label"></label>
								<select asp-for="IsActive" class="form-control" required>
									<option>-----Select Active-----</option>
									<option value="True">Active</option>
									<option value="False">Block</option>
								</select>
							</div>
							</div>
							<div class="form-group">
								<button type="submit" class="btn btn-primary btn-block">Update</button>
							</div>
						</form>
					</div>
					<div class="card-footer text-center">
						<a asp-action="Index" asp-controller="Account" class="btn btn-outline-secondary">Back To List</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<style>
		.card {
			border-radius: 10px;
			box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
		}

		.card-header {
			border-radius: 10px 10px 0 0;
		}

		.btn-outline-secondary {
			color: #495057;
			border-color: #495057;
		}

			.btn-outline-secondary:hover {
				color: #fff;
				background-color: #495057;
				border-color: #495057;
			}
	</style>
