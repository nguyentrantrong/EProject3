@model List<Eproject3.Models.Admin>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Admin? user = Context.Items["User"] as Admin;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                <!-- /.col -->
                @if (user?.Role == "admin")
                {
                        <div class="col-sm-6 text-right">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a asp-action="Create" asp-controller="Account" class="btn btn-outline-success">
                                        <i class="fas fa-user-plus"></i> Register New Admin
                                    </a>
                                </li>
                            </ol>
                        </div>
                    <!-- /.col -->
                }
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body table-responsive">
                            <table class="table table-bordered table-hover text-nowrap" id="adminTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Admin Name</th>
                                        <th>Role</th>
                                        @if (user?.Role == "admin")
                                        {
                                            <th>Status</th>
                                            <th>Action</th>
                                        }   
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var admin in Model)
                                    {
                                        <tr>
                                            <td>@admin.Id</td>
                                            <td>@admin.AdminName</td>
                                            <td style="text-transform: capitalize">@admin.Role</td>
                                            @if (user?.Role == "admin")
                                            {
                                                    @if (@admin.IsActive)
                                                    {
                                                        <td class="font-weight-bold text-success">Active</td>
                                                    }
                                                    else
                                                    {
                                                        <td class="font-weight-bold text-danger">Block</td>
                                                    }
                                                <td>
                                                    <a asp-action="Edit" asp-controller="Account" asp-route-id="@admin.Id" class="btn btn-outline-primary">
                                                        <i class="fas fa-edit"></i> Update
                                                    </a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    </div>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#adminTable").DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "language": {
                    "paginate": {
                        "next": "<i class='fas fa-chevron-right'></i>",
                        "previous": "<i class='fas fa-chevron-left'></i>"
                    }
                }
            });
        });
    </script>