@model Eproject3.Models.Admin

@{
	ViewBag.title = "Register Admin";
}

<div class="container">
	<div class="row justify-content-center mt-5">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header text-black text-center">
					<h3>Register Account</h3>
				</div>
				<div class="card-body">
					<form asp-action="Create" asp-controller="Account" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="Id" class="control-label">ID</label>
							<input asp-for="Id" class="form-control" placeholder="Enter ID" required />
							<span asp-validation-for="Id" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="AdminName" class="control-label">Admin Name</label>
							<input asp-for="AdminName" class="form-control" placeholder="Enter Admin Name" required />
							<span asp-validation-for="AdminName" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Password" class="control-label">Password</label>
							<input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" required />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Role" class="control-label">Role</label>
							<select asp-for="Role" class="form-control" required>
								<option value="admin">Admin</option>
								<option value="constructor">Constructor</option>
								<option value="maintainer">Maintainer</option>
							</select>
							<span asp-validation-for="Role" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input type="text" asp-for="IsActive" class="form-control" value="True" hidden />
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-success btn-block">Register</button>
						</div>
					</form>
				</div>
				<div class="card-footer text-center">
					<a asp-action="Index" asp-controller="Account" class="btn btn-outline-secondary">Back To List</a>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	.card {
		border-radius: 10px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
	}

	.card-header {
		border-radius: 10px 10px 0 0;
	}

	.btn-outline-secondary {
		color: #495057;
		border-color: #495057;
	}

		.btn-outline-secondary:hover {
			color: #fff;
			background-color: #495057;
			border-color: #495057;
		}
</style >