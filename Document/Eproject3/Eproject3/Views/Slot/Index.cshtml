@model List<Eproject3.Models.Slot>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Admin? user = Context.Items["User"] as Admin;
}

    <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                   @if (user?.Role == "admin")
                {
                        <div class="col-sm-6 text-right">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a asp-action="Create" asp-controller="Slot" class="btn btn-outline-success">
                                        <i class="fas fa-user-plus"></i>  Create New Slot
                                    </a>
                                </li>
                            </ol>
                        </div>
                    <!-- /.col -->
                }
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body table-responsive">
                            <table class="table table-bordered table-hover text-nowrap" id="slotTable">
                                <thead>
                                    <tr>
                                        <th>Day</th>
                                        <th>Slot</th>
                                        <th>Room</th>
                                        <th>Teacher</th>
                                        @if (user?.Role == "admin")
                                        {
                                            <th>Action</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                        <td>@item.Day?.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Slot1</td>
                                        <td>@item.Lab.LabsName</td>
                                        <td>@item.Admins.AdminName</td>
                                         @if (user?.Role == "admin")
                                         {
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.SlotId" class="btn btn-outline-primary"><i class="fas fa-edit"></i> Update</a>
                                            </td>
                                         }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $("#slotTable").DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "language": {
                "paginate": {
                    "next": "<i class='fas fa-chevron-right'></i>",
                    "previous": "<i class='fas fa-chevron-left'></i>"
                }
            }
        });
    });
</script>