@model Eproject3.Models.Device
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-left">
              <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
              <li class="breadcrumb-item active">Details</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="card" style="border-radius:50px">
              <div class="card-header">
                <h3>Details</h3>
              </div>
              <div class="card-body">
                <dl class="row">
                  <dt class="col-sm-2"></dt>
                  <dd class="col-sm-10"><img src="@Model.DeviceImg" width="100px" height="100px"/></dd>
                  <dt class="col-sm-2">Device Name</dt>
                  <dd class="col-sm-10">@Model.DeviceName</dd>
                  <dt class="col-sm-2">Device Type</dt>
                  <dd class="col-sm-10">@Model.DeviceType</dd>
                  <dt class="col-sm-2">Brand</dt>
                  <dd class="col-sm-10">@Model.Supplier.SupplierName</dd>
                  <dt class="col-sm-2">Status</dt>
                  <dd class="col-sm-10">@Model.Status</dd>
                  <dt class="col-sm-2">Date Maintance</dt>
                  <dd class="col-sm-10">@Model.DateMaintance</dd>
                  <dt class="col-sm-2">Belong to</dt>
                  <dd class="col-sm-10">@Model.Labs.LabsName</dd>
                </dl>
              <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i>Back to List</a>
              </div>
            </div>
          </div>
        </div>
    </section>
</div>