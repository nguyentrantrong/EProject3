@model List<Eproject3.Models.Complain>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section style="background-color: #f7f6f6;">
    <div class="container my-5 py-5 text-dark">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <a asp-action="Create" asp-controller="Complain" class="btn btn-outline-success">
                        <i class="fas fa-laptop-medical"></i> Complain Your Problem
                    </a>
                    <h4 class="text-dark mb-0">Unread comments </h4>
                    <div class="card">
                        
                        <div class="card-body p-2 d-flex align-items-center">
                            <h6 class="text-primary fw-bold small mb-0 me-1">Comments "ON"</h6>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked />
                                <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                            </div>
                        </div>
                    </div>
                </div>
                 @foreach (var item in Model)
                        {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex flex-start">
                            <div class="w-100">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="text-primary fw-bold mb-0">
                                            @item.Id:
                                            <span class="text-dark ms-2">@item.Description</span>
                                    </h6>
                                        <p class="mb-0">@item.DateCp</p>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <p class="small mb-0" >

                                            <a asp-action="EditComplain" asp-route-id="@item.ComplainId" style="color: #aaa; class="link-grey">•Reply•</a>

                                    </p>
                                    <div class="d-flex flex-row"> 
                                        <i class="fas fa-star text-warning me-2"></i>
                                        <i class="far fa-check-circle" style="color: blue;"></i>
                                    </div>
                                       
                                </div>
                                
                                    <div class="form-outline w-100">
                                        <span class="text-dark ms-2" id="textAreaExample"
                                                  style="background: #fff; margin-left: 50px">@item.Reply</span>
                                       
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
               
</section>

                       