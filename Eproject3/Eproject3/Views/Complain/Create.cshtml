@model Eproject3.Models.Complain
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Admin? user = Context.Items["User"] as Admin;
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-black text-center">
                    <h3>Complain</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" asp-controller="Complain">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="form-select mt-3" asp-for="Reason" class="control-label"></label>
                            <select asp-for="Reason" class="form-control" required>
                                <option>----SELECT----</option>
                                <option value="Complain about the quality of service !">Complain about the quality of service !</option>
                                <option value="Reflect on the Labs staff!">Reflect on the Labs staff!</option>
                                <option value="Complaint about equipment">Complaint about equipment</option>
                                <option value="Complaints about hygiene">Complaints about hygiene</option>
                                <option value="Complaints reflect another!">Complaints reflect another!</option>
                                <option value="Add more ideas for Labs!">Add more ideas for Labs!</option>
                                <option>----SELECT----</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="DateCp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-select mt-3" asp-for="Category" class="control-label"></label>
                            <select asp-for="Category" class="form-control" required>
                                <option>----SELECT----</option>
                                <option value="Electronic Devices">Electronic Devices</option>
                                <option value="Learning Facilities">Learning Facilities</option>
                                <option value="Other Problems">Other Problems</option>
                                <option>----SELECT----</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control" value="@user.AdminName" readonly />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea rows="5" asp-for="Description" class="form-control" placeholder="Enter to Description" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input asp-for="Reply" class="form-control" value="..." hidden />

                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Create</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" asp-controller="Complain" class="btn btn-outline-secondary">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .btn-outline-secondary {
        color: #495057;
        border-color: #495057;
    }

        .btn-outline-secondary:hover {
            color: #fff;
            background-color: #495057;
            border-color: #495057;
        }
</style>