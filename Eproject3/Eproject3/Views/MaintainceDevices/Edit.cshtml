@model Eproject3.Models.MaintainceDevice

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="container">
        <h1>Edit</h1>
        <h4>MaintainceDevice</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaintnId" />
                    <div class="form-group">
                        <label asp-for="Descriptions" class="control-label"></label>
                        <input asp-for="Descriptions" class="form-control" />
                        <span asp-validation-for="Descriptions" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reason" class="control-label"></label>
                        <input asp-for="Reason" class="form-control" />
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Creater" class="control-label"></label>
                        <input asp-for="Creater" class="form-control" />
                        <span asp-validation-for="Creater" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DevicesId" class="control-label">Device Name</label>
                        <select asp-for="DevicesId" class="form-control" asp-items="ViewBag.DevicesId"></select>
                        <span asp-validation-for="DevicesId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

